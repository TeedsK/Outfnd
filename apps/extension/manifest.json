{
    "manifest_version": 3,
    "name": "Outfnd — On‑device Wardrobe Composer",
    "description": "Clip any product from any store, extract attributes on‑device, and compose outfits from your saved wardrobe.",
    "version": "0.1.0",
    "minimum_chrome_version": "116",
    "permissions": [
        "storage",
        "sidePanel",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_title": "Open Outfnd"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/content-script.ts"
            ],
            "run_at": "document_idle"
        }
    ]
}